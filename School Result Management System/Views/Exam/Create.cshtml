@model ExamViewModel
@{
    ViewBag.Title = "Create Exam";
}





<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Exam Details</h3>
                </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form" method="post">

                        <fieldset>
                    
                        <div class="form-group">
                        <label>Enter Exam Type</label>
                        <input type="text" class="form-control" asp-for="ExamName" placeholder="eg: Unit or Term">
                        <span asp-validation-for="ExamName" class="text-danger"></span>

                        </div>
                            
                      
                                <div class="form-group">
                                    <label asp-for="ClassId">Class</label><br />
                                     <select asp-for="ClassId" class="form-control justify-content-center" asp-items="ViewBag.Classes"></select>

                                 </div>

                            <div class="form-group">
                                <label asp-for="ExamYear">Exam Year</label>
                                <input type="text" class="form-control" asp-for="ExamYear" placeholder="eg:2078" />
                                <span asp-validation-for="ExamYear" class="text-danger"></span>

</div>



                            <button type="submit" class="btn btn-lg btn-success btn-block">Add Exam</button>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



