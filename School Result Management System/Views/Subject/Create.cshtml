@model SubjectViewModel
@{
    ViewBag.Title = "Create Subject";
}


<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Create Subject</h3>
                </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form" method="post">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="SubjectName"></label>
                                <input asp-for="SubjectName" class="form-control" placeholder="Subject Name" />
                                <span asp-validation-for="SubjectName" class="text-danger"></span>
                                
                            </div>
                           
                                
                         
                             <button type="submit" class="btn btn-lg btn-success btn-block">Create</button>
                           
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

