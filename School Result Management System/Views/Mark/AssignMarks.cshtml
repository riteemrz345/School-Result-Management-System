@model List<MarksViewModel>
@{
    ViewBag.Title = "Assign Marks";
}

<form method="post">


    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            <label>@Model[i].Subject.SubjectName</label>
            <input asp-for="@Model[i].Subject.Id" type="hidden" />
            <input asp-for="@Model[i].Subject.SubjectName" type="hidden" />
            <input asp-for="@Model[i].Mark" class="form-control" />
        </div>
    }

    <button type="Submit" class="btn btn-success">Assign</button>
</form>
